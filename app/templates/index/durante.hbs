{{!-- Marca el boton a color verde --}}
<script>
    // Limpia los botones
    $('.tab-pdd .btn ').removeClass('bg-secondary btn-secondary');
    $('.tab-pdd .btn ').addClass('bg-white');
    $('.tab-pdd .btn .white').removeClass('d-inline');
    $('.tab-pdd .btn .color').removeClass('d-none');
    // Marca el boton
    $('.tab-pdd .btn.durante').removeClass('bg-white');
    $('.tab-pdd .btn.durante').addClass('bg-secondary btn-secondary');
    $('.tab-pdd .btn.durante .white').addClass('d-inline');
    $('.tab-pdd .btn.durante .color').addClass('d-none');
</script>
